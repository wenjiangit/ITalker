<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@drawable/bg_src_tianjin"
    tools:context="com.douliu.italker.frags.account.RegisterFragment">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_black"
        android:paddingBottom="@dimen/len_20"
        android:paddingTop="@dimen/len_40"
        app:title="@string/label_login"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:titleTextColor="@color/white">

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10"
        android:background="@drawable/bg_account_input"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/len_12"
            android:paddingEnd="@dimen/len_8"
            android:paddingStart="@dimen/len_8"
            android:paddingTop="@dimen/len_12">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/len_8"
                android:contentDescription="@string/app_name"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_phone" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="@string/label_phone"
                android:inputType="phone"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecond"
                android:textCursorDrawable="@drawable/ic_cursor"
                android:textSize="@dimen/font_14" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/len_8"
            android:layout_marginStart="@dimen/len_40"
            android:background="@color/black_alpha_32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/len_12"
            android:paddingEnd="@dimen/len_8"
            android:paddingStart="@dimen/len_8"
            android:paddingTop="@dimen/len_12">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/len_8"
                android:contentDescription="@string/app_name"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_key" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="@string/label_password"
                android:inputType="textPassword"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecond"
                android:textCursorDrawable="@drawable/ic_cursor"
                android:textSize="@dimen/font_14" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/len_8"
            android:layout_marginStart="@dimen/len_40"
            android:background="@color/black_alpha_32" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/len_16"
            android:text="@string/label_go_register"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:layout_width="@dimen/len_14"
            android:layout_height="@dimen/len_14"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@string/app_name"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_direction_right" />

    </FrameLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/len_28">


        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/len_172"
            android:layout_height="@dimen/len_44"
            android:layout_gravity="center"
            android:background="@drawable/sel_btn_bg_black_alpha_44"
            android:text="@string/label_login"
            android:textColor="@color/white"
            app:gTouchColor="@color/white_alpha_48"
            app:gTouchCornerRadius="@dimen/len_20"
            app:gTouchEffect="ripple" />


        <net.qiujuer.genius.ui.widget.Loading
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:gAutoRun="false" />

    </FrameLayout>


</LinearLayout>
